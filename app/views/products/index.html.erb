<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Sku</th>
      <th>Price</th>
      <th>Year</th>
      <th>Availabilty</th>
      <th>Quantity</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.sku %></td>
        <td><%= product.price %></td>
        <td><%= product.year %></td>
        <td><%= product.availabilty %></td>
        <td><%= product.quantity %></td>
        <td><%= product.size %></td>
        <td><%= image_tag attachment_url(@product, :patch, format: "png") %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
